{% extends 'base.html.twig' %}

{% block title %}Reliquary - Discover Sacred Relics Near You{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h2 class="mb-0">Relics Map</h2>
                </div>
                <div class="card-body">
                    <!-- OpenStreetMap -->
                    <div 
                        class="mb-4" 
                        style="height: 400px; position: relative;" 
                        data-controller="map" 
                        data-map-target="container"
                        data-map-relics-value="{{ relics|map(relic => {
                                'id': relic.id,
                                'saint': relic.saint.name,
                                'address': relic.address,
                                'location': relic.location,
                                'latitude': relic.latitude,
                                'longitude': relic.longitude
                            })|json_encode }}"
                        data-map-radius-value="{{ radius }}"
                    >
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Desktop view with card container (hidden on mobile) -->
    <div class="row d-none d-md-block">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h2 class="mb-0">Relics Near Me ({{ radius }}km)</h2>
                </div>
                <div class="card-body">
                    {% if relics|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Saint</th>
                                        <th>Address</th>
                                        <th>Specific Location</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for relic in relics %}
                                        <tr>
                                            <td>{{ relic.saint.name }}</td>
                                            <td>{{ relic.address }}</td>
                                            <td>{{ relic.location }}</td>
                                            <td>
                                                <a href="{{ path('app_relic_show', {'id': relic.id}) }}" class="btn btn-sm btn-outline-primary">
                                                    <svg class="bi" width="16" height="16">
                                                        <use href="#eye"></use>
                                                    </svg>
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            No relics found within {{ radius }}km of your location.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile view without card container (visible only on small screens) -->
    <div class="d-md-none">
        <h2 class="mb-3">Relics Near Me ({{ radius }}km)</h2>
        {% if relics|length > 0 %}
            <div class="list-group">
                {% for relic in relics %}
                    <a href="{{ path('app_relic_show', {'id': relic.id}) }}" class="list-group-item list-group-item-action p-0 {% if loop.first %}rounded-top{% elseif not loop.last %}border-bottom-0{% endif %} overflow-hidden">
                        <div class="bg-light p-2 border-bottom">
                            <h5 class="mb-0">{{ relic.saint.name }}</h5>
                        </div>
                        <div class="p-3">
                            <div class="mb-2">
                                <strong>Address:</strong><br>
                                <span class="text-muted">{{ relic.address }}</span>
                            </div>
                            <div class="mb-3">
                                <strong>Specific Location:</strong><br>
                                <span class="text-muted">{{ relic.location }}</span>
                            </div>
                            <span class="btn btn-sm btn-outline-primary">
                                <svg class="bi" width="16" height="16">
                                    <use href="#eye"></use>
                                </svg>
                                View
                            </span>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                No relics found within {{ radius }}km of your location.
            </div>
        {% endif %}
    </div>
</div>

<!-- Add map icon to SVG definitions -->
<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="map" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M15.817.113A.5.5 0 0 1 16 .5v14a.5.5 0 0 1-.402.49l-5 1a.502.502 0 0 1-.196 0L5.5 15.01l-4.902.98A.5.5 0 0 1 0 15.5v-14a.5.5 0 0 1 .402-.49l5-1a.5.5 0 0 1 .196 0L10.5.99l4.902-.98a.5.5 0 0 1 .415.103zM10 1.91l-4-.8v12.98l4 .8V1.91zm1 12.98 4-.8V1.11l-4 .8v12.98zm-6-.8V1.11l-4 .8v12.98l4-.8z"/>
    </symbol>
    <symbol id="geo-alt-fill" viewBox="0 0 16 16">
        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
    </symbol>
</svg>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}
