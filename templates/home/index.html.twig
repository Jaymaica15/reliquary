{% extends 'base.html.twig' %}

{% block title %}{{ 'home.title'|trans({}, 'home') }} - {{ 'home.welcome'|trans({}, 'home') }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card">
                <!-- OpenStreetMap -->
                <div 
                    class="card-img-top" 
                    style="height: 400px; position: relative;" 
                    data-controller="map" 
                    data-map-target="container"
                    data-map-relics-value="{{ relics|map(relic => {
                            'id': relic.id,
                            'saint': relic.saint.name,
                            'address': relic.address,
                            'location': relic.location,
                            'latitude': relic.latitude,
                            'longitude': relic.longitude
                        })|json_encode }}"
                    data-map-radius-value="{{ radius }}"
                    {% if userLocation %}
                    data-map-user-location-value="{{ {
                        'latitude': userLocation.latitude,
                        'longitude': userLocation.longitude
                    }|json_encode }}"
                    {% endif %}
                >
                </div>
            </div>
            
            <!-- Search form for home page -->
            <div class="card mt-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="fas fa-search me-2"></i>
                        {{ 'home.find_relics'|trans({}, 'home')|default('Find Relics') }}
                    </h5>
                    <div class="position-relative"
                         data-controller="search-expansion"
                         data-search-expansion-target="container">
                        <form data-search-expansion-target="form" action="{{ path('app_home') }}" method="get" data-search-type="address">
                            <div class="input-group input-group-lg">
                                <input type="search" 
                                       name="q"
                                       class="form-control bg-light border-end-0" 
                                       placeholder="{{ 'common.navigation.search_location'|trans({}, 'common')|default('Search for location...') }}" 
                                       aria-label="Search"
                                       data-search-expansion-target="input"
                                       data-search-type="address"
                                       data-action="click->search-expansion#toggle focus->search-expansion#closeOptions"
                                       value="{{ searchQuery }}"
                                       autocomplete="off">
                                <button type="submit" class="input-group-text bg-primary text-white" data-action="click->search-expansion#handleIconClick">
                                    <i class="fas fa-search" data-search-expansion-target="icon"></i>
                                </button>
                            </div>
                        </form>
                        <div class="d-none search-options position-absolute bg-white border rounded p-3 mt-1 w-100 shadow z-3"
                             data-search-expansion-target="options">
                            <h6 class="mb-3">Search by:</h6>
                            <div class="d-flex flex-column gap-2">
                                <button class="btn btn-dark btn-sm text-start highlighted"
                                        data-action="search-expansion#selectOption"
                                        data-option="saint"
                                        data-search-expansion-target="optionButton">
                                    <i class="fas fa-user me-2"></i>
                                    Saint
                                </button>
                                <button class="btn btn-dark btn-sm text-start"
                                        data-action="search-expansion#selectOption"
                                        data-option="address"
                                        data-search-expansion-target="optionButton">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    Address
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Relics list using responsive frame -->
    <div class="row">
        <div class="col-md-12">
            <h2 class="bg-dark text-white p-3 rounded mb-3">
                {% if searchQuery %}
                    {{ 'home.relics_near_address'|trans({'%address%': searchQuery}, 'home') }} ({{ radius }}km)
                {% else %}
                    {{ 'home.relics_near_me'|trans({}, 'home') }} ({{ radius }}km)
                {% endif %}
            </h2>
            {% if relics|length > 0 %}
                <!-- Single responsive turbo frame -->
                <turbo-frame id="relics-list"
                            data-controller="responsive-frame"
                            data-responsive-frame-desktop-src-value="{{ path('app_home_relics_desktop', searchQuery ? {'q': searchQuery} : {}) }}"
                            data-responsive-frame-mobile-src-value="{{ path('app_home_relics_mobile', searchQuery ? {'q': searchQuery} : {}) }}">
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </turbo-frame>
            {% else %}
                <div class="alert alert-info">
                    {% if searchQuery %}
                        {{ 'home.no_relics_found_address'|trans({'%radius%': radius, '%address%': searchQuery}, 'home') }}
                    {% else %}
                        {{ 'home.no_relics_found'|trans({'%radius%': radius}, 'home') }}
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}
