<turbo-frame id="relics-list">
    <div class="card shadow-sm">
        <div class="card-body">
            {% if pagination.items|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                        <tr>
                            <th style="width: 150px;"></th>
                            <th>{{ 'relic.table.saint'|trans({}, 'relic') }}</th>
                            <th>{{ 'relic.table.degree'|trans({}, 'relic') }}</th>
                            <th>{{ 'relic.table.address'|trans({}, 'relic') }}</th>
                            <th>{{ 'relic.table.location'|trans({}, 'relic') }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for relic in pagination %}
                            <tr class="cursor-pointer"
                                style="cursor: pointer;"
                                data-controller="link"
                                data-link-url-value="{{ path('app_relic_show', {'id': relic.id}) }}"
                                data-action="click->link#click">
                            <td>
                                    <div class="me-3">
                                        {% if relic.images|length > 0 %}
                                            <img src="{{ asset('uploads/images/' ~ relic.images.first.thumbnailFilename ?? relic.images.first.filename) }}"
                                                 alt="{{ 'relic.table.thumbnail'|trans({}, 'relic') }}"
                                                 class="img-thumbnail"
                                                 style="width: 100px; height: 100px; object-fit: cover;">
                                        {% else %}
                                            <img src="{{ asset('/images/relic.png') }}"
                                                 alt="{{ 'relic.no_image'|trans({}, 'relic') }}"
                                                 class="img-thumbnail opacity-25"
                                                 style="width: 100px; height: 100px; object-fit: contain; filter: grayscale(100%);">
                                        {% endif %}
                                    </div>
                                </td>
                                <td>{{ relic.saint|format_saint_name }}</td>
                                <td>{{ relic.degree.label }}</td>
                                <td>{{ relic.address }}</td>
                                <td>{{ relic.location }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4 px-2">
                    <div class="text-muted small">
                        {{ ((pagination.getCurrentPageNumber() - 1) * pagination.getItemNumberPerPage() + 1) }}-{{ min(pagination.getCurrentPageNumber() * pagination.getItemNumberPerPage(), pagination.getTotalItemCount) }} of {{ pagination.getTotalItemCount }} items
                    </div>
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            {% else %}
                <table class="table">
                    <tbody>
                    <tr>
                        <td colspan="4" class="text-center py-4 text-muted">
                            <i class="fas fa-circle-exclamation fa-2x mb-2"></i>
                            <p>{{ 'relic.no_relics'|trans({}, 'relic') }}</p>
                        </td>
                    </tr>
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</turbo-frame>
