<turbo-frame id="relics-list">
    <div class="card shadow-sm">
        <div class="card-body">
            {% if relics|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Saint</th>
                                <th>Address</th>
                                <th>Specific Location</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for relic in relics %}
                                <tr>
                                    <td>{{ relic.saint.name }}</td>
                                    <td>{{ relic.address }}</td>
                                    <td>{{ relic.location }}</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('app_relic_show', {'id': relic.id}) }}" class="btn btn-outline-primary" data-turbo-frame="main-content">
                                                <svg class="bi" width="16" height="16">
                                                    <use href="#eye"></use>
                                                </svg>
                                                View
                                            </a>
                                            <a href="{{ path('app_relic_edit', {'id': relic.id}) }}" class="btn btn-outline-secondary" data-turbo-frame="main-content">
                                                <svg class="bi" width="16" height="16">
                                                    <use href="#pencil"></use>
                                                </svg>
                                                Edit
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <table class="table">
                    <tbody>
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                <svg class="bi mb-2" width="32" height="32">
                                    <use href="#exclamation-circle"></use>
                                </svg>
                                <p>No relics found. Click "Add New Relic" to create one.</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</turbo-frame>
