<turbo-frame id="relics-list">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0">{{ title ?? 'Relics' }}</h2>
        </div>
        <div class="card-body">
            {% if relics|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Saint</th>
                                <th>Address</th>
                                <th>Specific Location</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for relic in relics %}
                                <tr>
                                    <td>{{ relic.saint.name }}</td>
                                    <td>{{ relic.address }}</td>
                                    <td>{{ relic.location }}</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('app_relic_show', {'id': relic.id}) }}" class="btn btn-outline-primary" data-turbo-frame="_top">
                                                <svg class="bi" width="16" height="16">
                                                    <use href="#eye"></use>
                                                </svg>
                                                View
                                            </a>
                                            <a href="{{ path('app_relic_edit', {'id': relic.id}) }}" class="btn btn-outline-secondary" data-turbo-frame="_top">
                                                <svg class="bi" width="16" height="16">
                                                    <use href="#pencil"></use>
                                                </svg>
                                                Edit
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info">
                    No relics found. Click "Add New Relic" to create one.
                </div>
            {% endif %}
        </div>
    </div>
</turbo-frame>
