{% extends 'base.html.twig' %}

{% block title %}{{ title ?? 'Relic index' }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold">{{ title ?? 'Relics' }}</h1>
            <p class="text-muted">Manage your sacred relics collection</p>
        </div>
        <div class="col-auto d-flex align-items-center">
            <a href="{{ path('app_relic_new') }}" class="btn btn-primary" data-turbo-frame="main-content">
                <svg class="bi me-2" width="16" height="16">
                    <use href="#plus-circle"></use>
                </svg>
                Add New Relic
            </a>
        </div>
    </div>

    <!-- Main content area -->
    <div class="row">
        <div class="col-12">
            <turbo-frame id="main-content" target="_top" data-turbo-action="advance">
                <div class="row">
                    <div class="col-12">
                        <turbo-frame id="relics-list" 
                                    data-controller="responsive-frame"
                                    data-responsive-frame-desktop-src-value="{{ title is defined and title == 'My Relics' ? path('app_my_relics_desktop') : path('app_relic_desktop') }}"
                                    data-responsive-frame-mobile-src-value="{{ title is defined and title == 'My Relics' ? path('app_my_relics_mobile') : path('app_relic_mobile') }}">
                            <div class="d-flex justify-content-center">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </turbo-frame>
                    </div>
                </div>
            </turbo-frame>
        </div>
    </div>
</div>
{% endblock %}
