{% extends 'base.html.twig' %}

{% block title %}{{ title ?? 'Relic index' }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold">{{ title ?? 'Relics' }}</h1>
            <p class="text-muted">Manage your sacred relics collection</p>
        </div>
        <div class="col-auto d-flex align-items-center">
            <a href="{{ path('app_relic_new') }}" class="btn btn-primary">
                <svg class="bi me-2" width="16" height="16">
                    <use href="#plus-circle"></use>
                </svg>
                Add New Relic
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Location</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for relic in relics %}
                        <tr>
                            <td>{{ relic.id }}</td>
                            <td>{{ relic.location }}</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('app_relic_show', {'id': relic.id}) }}" class="btn btn-outline-primary">
                                        <svg class="bi" width="16" height="16">
                                            <use href="#eye"></use>
                                        </svg>
                                        View
                                    </a>
                                    <a href="{{ path('app_relic_edit', {'id': relic.id}) }}" class="btn btn-outline-secondary">
                                        <svg class="bi" width="16" height="16">
                                            <use href="#pencil"></use>
                                        </svg>
                                        Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center py-4 text-muted">
                                <svg class="bi mb-2" width="32" height="32">
                                    <use href="#exclamation-circle"></use>
                                </svg>
                                <p>No relics found. Click "Add New Relic" to create one.</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
