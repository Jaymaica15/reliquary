{% extends 'base.html.twig' %}

{% block title %}{{ title ?? 'Relic index' }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold">{{ title ?? 'Relics' }}</h1>
            <p class="text-muted">Manage your sacred relics collection</p>
        </div>
        <div class="col-auto d-flex align-items-center">
            <a href="{{ path('app_relic_new') }}" class="btn btn-primary">
                <svg class="bi me-2" width="16" height="16">
                    <use href="#plus-circle"></use>
                </svg>
                Add New Relic
            </a>
        </div>
    </div>

    <!-- Desktop view with card container (hidden on mobile) -->
    <div class="row d-none d-md-block">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h2 class="mb-0">{{ title ?? 'Relics' }}</h2>
                </div>
                <div class="card-body">
                    {% if relics|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Saint</th>
                                        <th>Address</th>
                                        <th>Specific Location</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for relic in relics %}
                                        <tr>
                                            <td>{{ relic.saint.name }}</td>
                                            <td>{{ relic.address }}</td>
                                            <td>{{ relic.location }}</td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="{{ path('app_relic_show', {'id': relic.id}) }}" class="btn btn-outline-primary">
                                                        <svg class="bi" width="16" height="16">
                                                            <use href="#eye"></use>
                                                        </svg>
                                                        View
                                                    </a>
                                                    <a href="{{ path('app_relic_edit', {'id': relic.id}) }}" class="btn btn-outline-secondary">
                                                        <svg class="bi" width="16" height="16">
                                                            <use href="#pencil"></use>
                                                        </svg>
                                                        Edit
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            No relics found. Click "Add New Relic" to create one.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile view without card container (visible only on small screens) -->
    <div class="d-md-none">
        <h2 class="mb-3">{{ title ?? 'Relics' }}</h2>
        {% if relics|length > 0 %}
            <div class="list-group">
                {% for relic in relics %}
                    <div class="list-group-item p-0 {% if loop.first %}rounded-top{% elseif not loop.last %}border-bottom-0{% endif %} overflow-hidden">
                        <div class="bg-light p-2 border-bottom">
                            <h5 class="mb-0">{{ relic.saint.name }}</h5>
                        </div>
                        <div class="p-3">
                            <div class="mb-2">
                                <strong>Address:</strong><br>
                                <span class="text-muted">{{ relic.address }}</span>
                            </div>
                            <div class="mb-3">
                                <strong>Specific Location:</strong><br>
                                <span class="text-muted">{{ relic.location }}</span>
                            </div>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="{{ path('app_relic_show', {'id': relic.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <svg class="bi" width="16" height="16">
                                        <use href="#eye"></use>
                                    </svg>
                                    View
                                </a>
                                <a href="{{ path('app_relic_edit', {'id': relic.id}) }}" class="btn btn-sm btn-outline-secondary">
                                    <svg class="bi" width="16" height="16">
                                        <use href="#pencil"></use>
                                    </svg>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                No relics found. Click "Add New Relic" to create one.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
