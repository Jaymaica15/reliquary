{% extends 'base.html.twig' %}

{% block title %}Pending Relics{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold">Pending Relics</h1>
            <p class="text-muted">Relics awaiting approval by administrators</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            {% if relics|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 150px;"></th>
                                <th>Saint</th>
                                <th>Location</th>
                                <th>Creator</th>
                                <th>Status</th>
                                <th scope="col" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for relic in relics %}
                            <tr>
                                <td>
                                    <div class="me-3">
                                        {% if relic.images|length > 0 %}
                                            <img src="{{ asset('uploads/images/' ~ relic.images[0].filename) }}"
                                                 alt="Thumbnail"
                                                 class="img-thumbnail"
                                                 style="width: 100px; height: 100px; object-fit: cover;">
                                        {% else %}
                                            <img src="{{ asset('/images/relic.png') }}"
                                                 alt="No image available"
                                                 class="img-thumbnail opacity-25"
                                                 style="width: 100px; height: 100px; object-fit: contain; filter: grayscale(100%);">
                                        {% endif %}
                                    </div>
                                </td>
                                <td>{{ relic.saint.name }}</td>
                                <td>{{ relic.location }}</td>
                                <td>{{ relic.creator.username }}</td>
                                <td>{{ relic.status.label }}</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_relic_show', {'id': relic.id}) }}"
                                           class="btn btn-outline-primary" data-turbo-frame="_top">
                                            <i class="fas fa-eye"></i>
                                            View
                                        </a>
                                        <a href="{{ path('app_relic_approve', {'id': relic.id}) }}"
                                           class="btn btn-outline-success" data-turbo-frame="_top">
                                            <i class="fas fa-check"></i>
                                            Review
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <table class="table">
                    <tbody>
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                <i class="fas fa-circle-exclamation fa-2x mb-2"></i>
                                <p>No pending relics found</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_relic_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>
            Back to list
        </a>
    </div>
</div>
{% endblock %}