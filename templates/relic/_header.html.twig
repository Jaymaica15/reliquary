<div class="row mb-4">
    <div class="col">
        <h1 class="display-5 fw-bold">{{ title ?? 'relic.title'|trans({}, 'relic') }}</h1>
        <p class="text-muted">{{ 'relic.description'|trans({}, 'relic') }}</p>
    </div>
    <div class="col-auto d-flex align-items-center">
        {% if app.request.get('_route') == 'app_relic_index' %}
        <button type="button" class="btn btn-outline-secondary me-2" data-action="filter-toggle#toggle">
            <i class="fas fa-eye" data-filter-toggle-target="icon"></i>
            Filter
        </button>
        {% endif %}
        {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_relic_new') }}" class="btn btn-primary">
            <i class="fas fa-circle-plus me-2"></i>
            {{ 'relic.add_new'|trans({}, 'relic') }}
        </a>
        {% endif %}
    </div>
</div>
