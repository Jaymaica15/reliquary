<form method="post" action="{{ path('app_relic_delete', {'id': relic.id}) }}" onsubmit="return confirm('Are you sure you want to delete this relic?');" class="mt-3">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ relic.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </button>
</form>
