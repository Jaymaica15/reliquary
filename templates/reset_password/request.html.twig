{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">

                        <h1 class="h3 mb-3 font-weight-normal text-center">Reset your password</h1>

                        {{ form_start(requestForm) }}
                            <div class="mb-3">
                                {{ form_row(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                                <div class="form-text">
                                    <small>
                                        Enter your email address, and we will send you a
                                        link to reset your password.
                                    </small>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button class="btn btn-lg btn-primary" type="submit">Send password reset email</button>
                            </div>

                            <div class="mt-3 text-center">
                                <p><a href="{{ path('app_login') }}">Back to login</a></p>
                            </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
