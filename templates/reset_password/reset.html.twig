{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h1 class="h3 mb-3 font-weight-normal text-center">Reset your password</h1>

                        {{ form_start(resetForm) }}
                            <div class="mb-3">
                                {{ form_label(resetForm.plainPassword.first, 'New password', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="input-group mb-3" data-controller="password-toggle">
                                    {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-control', 'data-password-toggle-target': 'input'}}) }}
                                    <button class="btn btn-outline-secondary" type="button" data-action="password-toggle#toggle">
                                        <svg class="bi" width="16" height="16" data-password-toggle-target="icon">
                                            <use href="#eye"></use>
                                        </svg>
                                    </button>
                                </div>
                                {{ form_errors(resetForm.plainPassword.first) }}

                                {{ form_label(resetForm.plainPassword.second, 'Repeat Password', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="input-group" data-controller="password-toggle">
                                    {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-control', 'data-password-toggle-target': 'input'}}) }}
                                    <button class="btn btn-outline-secondary" type="button" data-action="password-toggle#toggle">
                                        <svg class="bi" width="16" height="16" data-password-toggle-target="icon">
                                            <use href="#eye"></use>
                                        </svg>
                                    </button>
                                </div>
                                {{ form_errors(resetForm.plainPassword.second) }}
                            </div>

                            <div class="d-grid gap-2">
                                <button class="btn btn-lg btn-primary" type="submit">Reset password</button>
                            </div>

                            <div class="mt-3 text-center">
                                <p><a href="{{ path('app_login') }}">Back to login</a></p>
                            </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
