{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-body">
                        <h1 class="h3 mb-3 font-weight-normal text-center">Reset your password</h1>

                        {{ form_start(resetForm) }}
                            <div class="mb-3">
                                {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="d-grid gap-2">
                                <button class="btn btn-lg btn-primary" type="submit">Reset password</button>
                            </div>

                            <div class="mt-3 text-center">
                                <p><a href="{{ path('app_login') }}">Back to login</a></p>
                            </div>
                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
