<form method="post" action="{{ path('app_saint_delete', {'id': saint.id}) }}" onsubmit="return confirm('Are you sure you want to delete this saint?');" class="d-inline {{ form_class|default('mt-3') }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ saint.id) }}">
    <button type="submit" class="btn btn-danger {{ button_class|default('') }}">
        <i class="bi bi-trash"></i> Delete
    </button>
</form>
