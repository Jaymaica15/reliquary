<turbo-frame id="saints-list">
    {% if pagination.items|length > 0 %}
        <div class="list-group">
        {% for saint in pagination %}
            <div class="list-group-item p-0 mb-3 border rounded overflow-hidden">
                <a href="{{ path('app_saint_show', {'id': saint.id}) }}" class="text-decoration-none" data-turbo-frame="_top">
                    <div class="position-relative">
                        {% if saint.images is defined and saint.images|length > 0 %}
                            <img src="{{ asset('uploads/images/' ~ saint.images.first.filename) }}"
                                 alt="{{ saint|format_saint_name }}"
                                 class="w-100"
                                 style="height: 180px; object-fit: cover;">
                        {% else %}
                            <img src="{{ asset('/images/relic.png') }}"
                                 alt="No image available"
                                 class="w-100 opacity-25"
                                 style="height: 180px; object-fit: contain; filter: grayscale(100%);">
                        {% endif %}
                        <div class="position-absolute bottom-0 start-0 w-100 bg-dark bg-opacity-75 text-white p-2">
                            <h5 class="mb-0">{{ saint|format_saint_name }}</h5>
                        </div>
                    </div>
                </a>
                <div class="p-3">
                    <div class="mb-2">
                        <strong>{{ 'saint.table.feast_date'|trans({}, 'saint') }}:</strong><br>
                        <span class="text-muted fw-bold">{{ saint.feastDate 
                            ? saint.feastDate|format_date('medium', pattern=('common.date_formats.feast_date'|trans({}, 'common')))
                            : 'common.not_available'|trans({}, 'common') }}</span>
                    </div>
                    {% if saint.canonicalStatus %}
                    <div class="mb-2">
                        <strong>{{ 'saint.table.canonical_status'|trans({}, 'saint') }}:</strong><br>
                        <span class="text-muted">{{ saint.canonicalStatus.getLabel() }}</span>
                    </div>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="d-flex">
                        <a href="{{ path('app_saint_edit', {'id': saint.id}) }}" class="btn btn-outline-secondary"
                           data-turbo-frame="_top">
                            <i class="fas fa-pencil"></i>
                            {{ 'saint.actions.edit'|trans({}, 'saint') }}
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
        </div>
        
        <div class="d-flex justify-content-between align-items-center mt-4 px-2">
            <div class="text-muted small">
                {{ ((pagination.getCurrentPageNumber() - 1) * pagination.getItemNumberPerPage() + 1) }}-{{ min(pagination.getCurrentPageNumber() * pagination.getItemNumberPerPage(), pagination.getTotalItemCount) }} of {{ pagination.getTotalItemCount }} items
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">
            {{ 'saint.no_saints'|trans({}, 'saint') }}
        </div>
    {% endif %}
</turbo-frame>