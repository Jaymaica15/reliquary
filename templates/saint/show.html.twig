{% extends 'base.html.twig' %}

{% block title %}{{ 'saint.show_title'|trans({}, 'saint') }}{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('saint/_header.html.twig', {'title': 'saint.show_title'|trans({}, 'saint')}) }}
    <div class="row">
        <div class="col-12">
            <div class="card shadow border rounded overflow-hidden">
                <div class="position-relative">
                    {% if saint.images is defined and saint.images|length > 0 %}
                        <div class="position-relative">
                            <img src="{{ asset('uploads/images/' ~ saint.images.first.filename) }}" 
                                 alt="{{ saint|format_saint_name }}" 
                                 class="w-100"
                                 style="height: 280px; object-fit: cover;">
                            <div class="position-absolute bottom-0 start-0 w-100 bg-dark bg-opacity-75 text-white p-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="mb-0">{{ saint|format_saint_name }}</h4>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="position-relative">
                            <img src="{{ asset('/images/relic.png') }}" 
                                 alt="No image available" 
                                 class="w-100 opacity-25"
                                 style="height: 280px; object-fit: contain; filter: grayscale(100%);">
                            <div class="position-absolute bottom-0 start-0 w-100 bg-dark bg-opacity-75 text-white p-3">
                                <h4 class="mb-0">{{ saint|format_saint_name }}</h4>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            {% if saint.canonicalStatus %}
                            <div class="mb-3">
                                <strong>{{ 'saint.table.canonical_status'|trans({}, 'saint') }}:</strong><br>
                                <span class="text-muted">{{ saint.canonicalStatus.getLabel() }} ({{ saint.canonicalStatus.getTitleTransKey()|trans({}, 'saint') }})</span>
                            </div>
                            {% endif %}

                            {% if saint.feastDate %}
                            <div class="mb-3">
                                <strong>{{ 'saint.table.feast_date'|trans({}, 'saint') }}:</strong><br>
                                <span class="text-muted fw-bold">{{ saint.feastDate|format_date('medium', pattern=('common.date_formats.feast_date'|trans({}, 'common'))) }}</span>
                            </div>
                            {% endif %}

                            {% if saint.canonizationDate %}
                            <div class="mb-3">
                                <strong>{{ 'saint.table.canonization_date'|trans({}, 'saint') }}:</strong><br>
                                <span class="text-muted">{{ saint.canonizationDate|date('Y-m-d') }}</span>
                            </div>
                            {% endif %}
                        </div>

                        <div class="col-md-6">
                            {% if saint.url %}
                            <div class="mb-3">
                                <strong>{{ 'saint.table.url'|trans({}, 'saint') }}:</strong><br>
                                <span class="text-muted">
                                    <a href="{{ saint.url }}" target="_blank" class="text-decoration-none">{{ saint.url }}</a>
                                </span>
                            </div>
                            {% endif %}

                            {% if saint.saintPhrase %}
                            <div class="mb-3">
                                <strong>{{ 'saint.table.saint_phrase'|trans({}, 'saint') }}:</strong><br>
                                <span class="text-muted fst-italic">
                                    "{{ saint.saintPhrase }}"
                                </span>
                            </div>
                            {% endif %}
                        </div>
                    </div>

                    {% if saint.images is defined and saint.images|length > 1 %}
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="border-bottom pb-2 mb-3">{{ 'saint.table.images'|default('Images') }}</h5>
                            <div class="row">
                                {% for image in saint.images %}
                                    <div class="col-md-4 mb-3">
                                        <img src="{{ asset('uploads/images/' ~ image.filename) }}" 
                                             alt="Image of {{ saint|format_saint_name }}" 
                                             class="img-fluid rounded">
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if saint.relics is defined and saint.relics|length > 0 %}
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="border-bottom pb-2 mb-3">{{ 'saint.table.relics'|trans({}, 'saint') }}</h5>
                            <!-- Single responsive turbo frame -->
                            <turbo-frame id="relics-list"
                                        data-controller="responsive-frame"
                                        data-responsive-frame-desktop-src-value="{{ path('app_saint_relics_desktop', {'saint': saint.id}) }}"
                                        data-responsive-frame-mobile-src-value="{{ path('app_saint_relics_mobile', {'saint': saint.id}) }}">
                                <div class="d-flex justify-content-center">
                                    <div class="spinner-border" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            </turbo-frame>
                        </div>
                    </div>
                    {% endif %}
                </div>

                <div class="card-footer bg-light p-3">
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_saint_index') }}" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left"></i>
                            {{ 'saint.actions.back'|trans({}, 'saint') }}
                        </a>
                        <div>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_saint_edit', {'id': saint.id}) }}" class="btn btn-outline-secondary me-2">
                                    <i class="fas fa-pencil"></i>
                                    {{ 'saint.actions.edit'|trans({}, 'saint') }}
                                </a>
                                {{ include('saint/_delete_form.html.twig', {'form_class': '', 'button_class': ''}) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
