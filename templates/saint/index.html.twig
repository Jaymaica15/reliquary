{% extends 'base.html.twig' %}

{% block title %}{{ title ?? 'Saint index' }}{% endblock %}

{% block body %}
<div class="container py-4" data-controller="filter-toggle">
    {{ include('saint/_header.html.twig') }}

    <!-- Single responsive turbo frame -->
    <div class="row">
        <div class="col-12">
            <turbo-frame id="saints-list" 
                        data-controller="responsive-frame"
                        data-responsive-frame-desktop-src-value="{{ title is defined and title == 'My Saints' ? path('app_my_saints_desktop') : path('app_saint_desktop') }}"
                        data-responsive-frame-mobile-src-value="{{ title is defined and title == 'My Saints' ? path('app_my_saints_mobile') : path('app_saint_mobile') }}">
                <div class="d-flex justify-content-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </turbo-frame>
        </div>
    </div>
</div>
{% endblock %}
