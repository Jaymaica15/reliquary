{% extends 'base.html.twig' %}

{% block title %}{{ title ?? 'Saint index' }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold">{{ title ?? 'Saints' }}</h1>
            <p class="text-muted">Manage your saints collection</p>
        </div>
        <div class="col-auto d-flex align-items-center">
            <a href="{{ path('app_saint_new') }}" class="btn btn-primary">
                <svg class="bi me-2" width="16" height="16">
                    <use href="#plus-circle"></use>
                </svg>
                Add New Saint
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <div class="input-group">
                    <label class="input-group-text" for="filter">Filter by Status</label>
                    <select class="form-select" id="filter" name="filter" onchange="this.form.submit()">
                        <option value="">All Saints</option>
                        {% for status in canonical_statuses %}
                            <option value="{{ status.value }}" {% if filter == status.value %}selected{% endif %}>
                                {{ status.title }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                {% if filter %}
                    <a href="{{ app.request.get('_route') == 'app_my_saints' ? path('app_my_saints') : path('app_saint_index') }}" class="btn btn-outline-secondary ms-2">
                        <svg class="bi" width="16" height="16">
                            <use href="#x-circle"></use>
                        </svg>
                        Clear
                    </a>
                {% endif %}
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for saint in pagination %}
                        <tr>
                            <td>{{ saint.id }}</td>
                            <td>{{ saint|format_saint_name }}</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('app_saint_show', {'id': saint.id}) }}" class="btn btn-outline-primary">
                                        <svg class="bi" width="16" height="16">
                                            <use href="#eye"></use>
                                        </svg>
                                        View
                                    </a>
                                    <a href="{{ path('app_saint_edit', {'id': saint.id}) }}" class="btn btn-outline-secondary">
                                        <svg class="bi" width="16" height="16">
                                            <use href="#pencil"></use>
                                        </svg>
                                        Edit
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center py-4 text-muted">
                                <svg class="bi mb-2" width="32" height="32">
                                    <use href="#exclamation-circle"></use>
                                </svg>
                                <p>No saints found. Click "Add New Saint" to create one.</p>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4 px-2">
                <div class="text-muted small">
                    Showing {{ pagination.getCurrentPageNumber() }} of {{ pagination.getTotalItemCount > 0 ? pagination.getPageCount() : 1 }} pages
                    ({{ pagination.getTotalItemCount }} total items)
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
