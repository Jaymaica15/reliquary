<turbo-frame id="saints-list">
    <div class="card shadow-sm">
        <div class="card-body">
            {% if pagination.items|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                        <tr>
                            <th style="width: 150px;"></th>
                            <th>{{ knp_pagination_sortable(pagination, 'saint.table.name'|trans({}, 'saint'), 's.name') }}</th>
                            <th style="width: 150px">{{ knp_pagination_sortable(pagination, 'saint.table.feast_date'|trans({}, 'saint'), 's.feast_date') }}</th>
                            <th style="width: 250px">{{ knp_pagination_sortable(pagination, 'saint.table.canonization_date'|trans({}, 'saint'), 's.canonization_date') }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for saint in pagination %}
                            <tr class="cursor-pointer"
                                style="cursor: pointer;"
                                data-controller="link"
                                data-link-url-value="{{ path('app_saint_show', {'id': saint.id}) }}"
                                data-action="click->link#click">
                                <td>
                                    <div class="me-3">
                                        {% if saint.images is defined and saint.images|length > 0 %}
                                            <img src="{{ asset('uploads/images/' ~ saint.images.first.filename) }}"
                                                 alt="{{ saint|format_saint_name }}"
                                                 class="img-thumbnail"
                                                 style="width: 100px; height: 100px; object-fit: cover;">
                                        {% else %}
                                            <img src="{{ asset('/images/relic.png') }}"
                                                 alt="No image available"
                                                 class="img-thumbnail opacity-25"
                                                 style="width: 100px; height: 100px; object-fit: contain; filter: grayscale(100%);">
                                        {% endif %}
                                    </div>
                                </td>
                                <td class="text-center fw-bold">{{ saint|format_saint_name }}</td>
                                <td class="text-center">{{ saint.feastDate
                                    ? saint.feastDate|format_date('medium', pattern=('common.date_formats.feast_date'|trans({}, 'common')))
                                    : 'common.not_available'|trans({}, 'common') }}</td>
                                <td class="text-center">{{ saint.canonizationDate
                                    ? saint.canonizationDate|format_date('medium', pattern=('common.date_formats.canonization_date'|trans({}, 'common')))
                                    : 'common.not_available'|trans({}, 'common') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4 px-2">
                    <div class="text-muted small">
                        {{ ((pagination.getCurrentPageNumber() - 1) * pagination.getItemNumberPerPage() + 1) }}-{{ min(pagination.getCurrentPageNumber() * pagination.getItemNumberPerPage(), pagination.getTotalItemCount) }} of {{ pagination.getTotalItemCount }} items
                    </div>
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            {% else %}
                <table class="table">
                    <tbody>
                    <tr>
                        <td colspan="5" class="text-center py-4 text-muted">
                            <i class="fas fa-circle-exclamation fa-2x mb-2"></i>
                            <p>{{ 'saint.no_saints'|trans({}, 'saint') }}</p>
                        </td>
                    </tr>
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</turbo-frame>
