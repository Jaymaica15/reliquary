{% extends 'base.html.twig' %}

{% block title %}{{ 'about.title'|trans({}, 'about') }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold">{{ 'about.title'|trans({}, 'about') }}</h1>
            <p class="text-muted">{{ 'about.subtitle'|trans({}, 'about') }}</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <div class="card mb-4 shadow border-0 rounded-3">
                <div class="card-body p-4">
                    <div class="d-flex float-lg-start">
                        <img src="{{ asset('/images/relic.png') }}" alt="{{ 'common.logo'|trans({}, 'common') }}" class="img-fluid" style="max-width: 150px;">
                    </div>
                    <h2 class="card-title fw-bold mb-3">{{ 'about.what_is_reliquary.title'|trans({}, 'about') }}</h2>
                    <p class="card-text lead">
                        {{ 'about.what_is_reliquary.description'|trans({}, 'about') }}
                    </p>
                </div>
            </div>

            <div class="card mb-4 shadow border-0 rounded-3">
                <div class="card-body p-4">
                    <h2 class="card-title fw-bold mb-3">{{ 'about.features.title'|trans({}, 'about') }}</h2>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="fas fa-database text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">{{ 'about.features.comprehensive_database.title'|trans({}, 'about') }}</h5>
                                    <p class="mb-0 text-muted">{{ 'about.features.comprehensive_database.description'|trans({}, 'about') }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="fas fa-user-friends text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">{{ 'about.features.saint_information.title'|trans({}, 'about') }}</h5>
                                    <p class="mb-0 text-muted">{{ 'about.features.saint_information.description'|trans({}, 'about') }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="fas fa-map-marker-alt text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">{{ 'about.features.geolocation_search.title'|trans({}, 'about') }}</h5>
                                    <p class="mb-0 text-muted">{{ 'about.features.geolocation_search.description'|trans({}, 'about') }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="fas fa-users text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">{{ 'about.features.user_contributions.title'|trans({}, 'about') }}</h5>
                                    <p class="mb-0 text-muted">{{ 'about.features.user_contributions.description'|trans({}, 'about') }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                    <i class="fas fa-language text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">{{ 'about.features.multilingual_support.title'|trans({}, 'about') }}</h5>
                                    <p class="mb-0 text-muted">{{ 'about.features.multilingual_support.description'|trans({}, 'about') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow border-0 rounded-3">
                <div class="card-body p-4">
                    <h2 class="card-title fw-bold mb-3">{{ 'about.contact.title'|trans({}, 'about') }}</h2>
                    <p class="card-text">
                        {{ 'about.contact.description'|trans({}, 'about') }}
                        <a href="https://github.com/CesarScur/reliquary" target="_blank" class="text-decoration-none">{{ 'about.contact.github_repository'|trans({}, 'about') }}</a>.
                    </p>
                    <div class="mt-3">
                        <a href="https://github.com/CesarScur/reliquary" target="_blank" class="btn btn-outline-primary">
                            <i class="fab fa-github me-2"></i>{{ 'common.footer.view_on_github'|trans({}, 'common') }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}