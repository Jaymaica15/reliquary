{% extends 'base.html.twig' %}

{% block title %}Access Denied{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <img src="{{ asset('/images/relic.png') }}" width="100" height="100" class="mb-4" alt="Reliquary Logo">
            <h1 class="display-4 mb-4">403 - Access Denied</h1>
            <div class="card mb-4">
                <div class="card-body">
                    <p class="lead">You don't have permission to access this page.</p>
                    <p>If you believe this is an error, please contact the administrator or try logging in with an account that has the necessary permissions.</p>
                </div>
            </div>
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a href="{{ path('app_home') }}" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="fas fa-home me-2"></i>
                    Return Home
                </a>
                {% if not app.user %}
                <a href="{{ path('app_login') }}" class="btn btn-outline-secondary btn-lg px-4">
                    Login
                </a>
                {% else %}
                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4">
                    Go Back
                </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}