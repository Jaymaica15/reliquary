{% extends 'base.html.twig' %}

{% block title %}{{ 'title'|trans({}, 'profile') }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ 'title'|trans({}, 'profile') }}</h1>

        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        {% if user.profileImage %}
                            <img src="{{ asset('uploads/images/' ~ user.profileImage.filename) }}" 
                                 alt="{{ 'user.profile_image'|trans({}, 'user') }}" 
                                 class="img-fluid rounded-circle mb-3" 
                                 style="width: 150px; height: 150px; object-fit: cover;">
                        {% else %}
                            <div class="bg-light rounded-circle d-inline-flex justify-content-center align-items-center mb-3" 
                                 style="width: 150px; height: 150px;">
                                <i class="fas fa-user" style="font-size: 4rem;"></i>
                            </div>
                        {% endif %}
                        <h5 class="card-title">{{ user.username }}</h5>
                        <p class="text-muted">{{ user.email }}</p>
                        <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
                            {{ 'edit'|trans({}, 'profile') }}
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'information'|trans({}, 'profile') }}</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>{{ 'username'|trans({}, 'profile') }}:</strong> {{ user.username }}
                            </li>
                            <li class="list-group-item">
                                <strong>{{ 'email'|trans({}, 'profile') }}:</strong> {{ user.email }}
                            </li>
                            <li class="list-group-item">
                                <strong>{{ 'verified'|trans({}, 'profile') }}:</strong> 
                                {% if user.isVerified %}
                                    <span class="badge bg-success">{{ 'common.yes'|trans({}, 'common') }}</span>
                                {% else %}
                                    <span class="badge bg-danger">{{ 'common.no'|trans({}, 'common') }}</span>
                                {% endif %}
                            </li>
                            <li class="list-group-item">
                                <strong>{{ 'language'|trans({}, 'profile') }}:</strong>
                                <div class="mt-2">
                                    {% include '_locale_switcher.html.twig' %}
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
