{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">Edit User</h1>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row mb-3">
                            <div class="col-md-12">
                                {{ form_row(form.username) }}
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                {{ form_row(form.email) }}
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_label(form.roles) }}
                                    {{ form_widget(form.roles) }}
                                    {{ form_errors(form.roles) }}
                                    <small class="form-text text-muted">
                                        ROLE_USER is automatically assigned to all users.
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_label(form.isVerified) }}
                                    {{ form_widget(form.isVerified) }}
                                    {{ form_errors(form.isVerified) }}
                                </div>
                            </div>
                        </div>

                        {% if form.vars.errors|length > 0 %}
                            <div class="alert alert-danger">
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_admin_users_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to list
                        </a>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save
                            </button>
                            {% if app.user != user %}
                            <a href="{{ path('app_admin_users_show', {'id': user.id}) }}" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-eye"></i> View
                            </a>
                            {% endif %}
                        </div>
                    </div>
                {{ form_end(form) }}
                </div>
            </div>

            {% if app.user != user %}
            <div class="d-flex justify-content-end mt-3">
                <form method="post" action="{{ path('app_admin_users_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
