{% extends 'base.html.twig' %}

{% block title %}{{ 'error.debug.title'|trans({}, 'error') }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold">{{ 'error.debug.heading'|trans({}, 'error') }}</h1>
            <p class="lead">{{ 'error.debug.description'|trans({}, 'error') }}</p>
            <div class="alert alert-warning">
                <i class="fas fa-circle-exclamation me-2"></i>
                <strong>{{ 'error.debug.warning_label'|trans({}, 'error') }}</strong> {{ 'error.debug.warning_text'|trans({}, 'error') }}
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">{{ 'error.debug.php_exception.title'|trans({}, 'error') }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ 'error.debug.php_exception.description'|trans({}, 'error') }}</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_debug_error_exception') }}" class="btn btn-outline-danger">{{ 'error.debug.php_exception.button'|trans({}, 'error') }}</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">{{ 'error.debug.not_found.title'|trans({}, 'error') }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ 'error.debug.not_found.description'|trans({}, 'error') }}</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_debug_error_not_found') }}" class="btn btn-outline-warning">{{ 'error.debug.not_found.button'|trans({}, 'error') }}</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">{{ 'error.debug.php_error.title'|trans({}, 'error') }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ 'error.debug.php_error.description'|trans({}, 'error') }}</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_debug_error_php_error') }}" class="btn btn-outline-danger">{{ 'error.debug.php_error.button'|trans({}, 'error') }}</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">{{ 'error.debug.memory_limit.title'|trans({}, 'error') }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ 'error.debug.memory_limit.description'|trans({}, 'error') }}</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_debug_error_memory_limit') }}" class="btn btn-outline-danger">{{ 'error.debug.memory_limit.button'|trans({}, 'error') }}</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">{{ 'error.debug.php_warning.title'|trans({}, 'error') }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ 'error.debug.php_warning.description'|trans({}, 'error') }}</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_debug_error_warning') }}" class="btn btn-outline-warning">{{ 'error.debug.php_warning.button'|trans({}, 'error') }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}