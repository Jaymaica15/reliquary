{% extends 'base.html.twig' %}

{% block title %}Debug Error Triggers{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5 fw-bold">Debug Error Triggers</h1>
            <p class="lead">This page provides various options to trigger errors for testing and debugging purposes.</p>
            <div class="alert alert-warning">
                <i class="fas fa-circle-exclamation me-2"></i>
                <strong>Warning:</strong> These actions are intended for development and testing only. They will
                generate errors in the application logs.
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">PHP Exception</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Triggers a standard PHP exception that will be caught and logged.</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_debug_error_exception') }}" class="btn btn-outline-danger">Trigger Exception</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">404 Not Found</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Triggers a 404 Not Found HTTP exception that will be caught and logged.</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_debug_error_not_found') }}" class="btn btn-outline-warning">Trigger 404</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">PHP Error</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Triggers a PHP error (division by zero) that will be caught and logged.</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_debug_error_php_error') }}" class="btn btn-outline-danger">Trigger PHP Error</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">Memory Limit</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Attempts to trigger a memory limit error by allocating a large array.</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_debug_error_memory_limit') }}" class="btn btn-outline-danger">Test Memory Limit</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">PHP Warning</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Triggers a PHP warning that will be logged but not displayed to the user.</p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_debug_error_warning') }}" class="btn btn-outline-warning">Trigger Warning</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}