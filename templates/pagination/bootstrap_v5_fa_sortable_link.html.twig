{#
/**
 * @file
 * Bootstrap v5 with Font Awesome 5 Sorting control implementation.
 */
#}
<a class="btn btn-dark{% if options.class is defined %} {{ options.class }}{% endif %}"{% for attr, value in options %}{% if attr != 'class' %} {{ attr }}="{{ value }}"{% endif %}{% endfor %}>
    <span class="float-end">
        {% if sorted %}
            {% if direction == 'desc' %}
                <i class="fas fa-sort-down"></i>
            {% else %}
                <i class="fas fa-sort-up"></i>
            {% endif %}
        {% else %}
            <i class="fas fa-sort"></i>
        {% endif %}
    </span>
    {{- title -}}
</a>