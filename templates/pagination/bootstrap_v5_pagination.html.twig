{# bootstrap_v5_pagination.html.twig #}
{# This template is based on Material Design data tables pagination #}
{# See: https://material.io/components/data-tables #}

{% if pageCount > 1 %}
    <nav aria-label="Page navigation" class="material-pagination">
        <div class="d-flex align-items-center">
            {% if first is defined and current != first %}
                <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" class="btn btn-icon p-1 me-1" aria-label="First page">
                    <i class="fas fa-angle-double-left"></i>
                </a>
            {% else %}
                <span class="btn btn-icon p-1 me-1 disabled" aria-label="First page">
                    <i class="fas fa-angle-double-left text-muted"></i>
                </span>
            {% endif %}

            {% if previous is defined %}
                <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" class="btn btn-icon p-1 me-3" aria-label="Previous page">
                    <i class="fas fa-angle-left"></i>
                </a>
            {% else %}
                <span class="btn btn-icon p-1 me-3 disabled" aria-label="Previous page">
                    <i class="fas fa-angle-left text-muted"></i>
                </span>
            {% endif %}

            <span class="text-muted small">
                Page {{ current }} of {{ pageCount }}
            </span>

            {% if next is defined %}
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" class="btn btn-icon p-1 ms-3" aria-label="Next page">
                    <i class="fas fa-angle-right"></i>
                </a>
            {% else %}
                <span class="btn btn-icon p-1 ms-3 disabled" aria-label="Next page">
                    <i class="fas fa-angle-right text-muted"></i>
                </span>
            {% endif %}

            {% if last is defined and current != last %}
                <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" class="btn btn-icon p-1 ms-1" aria-label="Last page">
                    <i class="fas fa-angle-double-right"></i>
                </a>
            {% else %}
                <span class="btn btn-icon p-1 ms-1 disabled" aria-label="Last page">
                    <i class="fas fa-angle-double-right text-muted"></i>
                </span>
            {% endif %}
        </div>
    </nav>
{% endif %}